<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
            android:id="@+id/contentTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello World!"/>

    <Button android:id="@+id/javaAspectDemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JavaAspectDemo"/>

    <Button android:id="@+id/kotlinAspectDemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KotlinAspectDemo"/>

    <TextView
            android:id="@+id/normalTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello World!"/>

    <TextView
            android:id="@+id/singleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello World!"/>

    <Button android:id="@+id/singleClickDemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SingleClickDemo"/>
</LinearLayout>
